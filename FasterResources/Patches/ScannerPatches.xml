<?xml version="1.0" encoding="utf-8"?>
<Patch>
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/StatDef[defName="DeepDrillingSpeed"]/defaultBaseValue</xpath>
        <value>
            <defaultBaseValue>10</defaultBaseValue>
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <xpath>/Defs/ThingDef[defName="GroundPenetratingScanner"]/comps</xpath>
        <value>
            <comps>
                <li Class="CompProperties_Forbiddable"/>
                <li Class="CompProperties_Power">
                    <compClass>CompPowerTrader</compClass>
                    <basePowerConsumption>700</basePowerConsumption>
                </li>
                <li Class="CompProperties_Breakdownable"/>
                <li Class="CompProperties_Flickable"/>
                <li Class="CompProperties_ScannerMineralsDeep">
                    <scanSpeedStat>ResearchSpeed</scanSpeedStat>
                    <scanFindMtbDays>1</scanFindMtbDays>
                    <scanFindGuaranteedDays>0.4</scanFindGuaranteedDays>
                    <soundWorking>ScannerGroundPenetrating_Ambience</soundWorking>
                </li>
            </comps>
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <xpath>/Defs/ThingDef[defName="GroundPenetratingScanner"]/costList</xpath>
        <value>
            <costList>
            <Steel>150</Steel>
            <ComponentIndustrial>4</ComponentIndustrial>
            </costList>
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <xpath>/Defs/ThingDef[defName="LongRangeMineralScanner"]/comps</xpath>
        <value>
            <comps>
            <li Class="CompProperties_Forbiddable"/>
            <li Class="CompProperties_Power">
                <compClass>CompPowerTrader</compClass>
                <basePowerConsumption>700</basePowerConsumption>
            </li>
            <li Class="CompProperties_Breakdownable"/>
            <li Class="CompProperties_Flickable"/>
            <li Class="CompProperties_LongRangeMineralScanner">
                <scanSpeedStat>ResearchSpeed</scanSpeedStat>
                <scanFindMtbDays>1</scanFindMtbDays>
                <scanFindGuaranteedDays>0.6</scanFindGuaranteedDays>
                <soundWorking>ScannerLongRangeMineral_Ambience</soundWorking>
            </li>
            </comps>
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <xpath>/Defs/ThingDef[defName="LongRangeMineralScanner"]/costList</xpath>
        <value>
            <costList>
            <Steel>200</Steel>
            <ComponentIndustrial>6</ComponentIndustrial>
            </costList>
        </value>
    </Operation>
</Patch>
